  margin: 20px 0;
  font-weight: 300;
}
main .deals-section .deals-body .deals-texts button:hover {
  background-color: red;
}
main .deals-section .deals-body .deals-product-image {
  position: absolute;
  bottom: 0;
  right: 18%;
  width: 330px;
}
main .deals-section .deals-body .deals-product-image img {
  width: 100%;
  height: 100%;
}
main .service-section {
  text-align: center;
  margin: 60px auto;
  width: 80%;
}
main .service-section h1 {
  font-size: 40px;
  font-weight: bold;
}
main .service-section .services {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  margin: 30px 0;
}
main .service-section .services .service-highlight {
  padding: 20px 10px;
}
main .service-section .services .service-highlight div {
  margin: 0 auto;
  font-size: 35px;
  color: #818181;
}
main .service-section .services .service-highlight h3 {
  text-align: center;
