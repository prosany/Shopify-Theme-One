* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: "Oxygen", sans-serif;
}

body {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: "Oxygen", sans-serif;
}

.bg-red {
  background-color: red;
}
.bg-red::after {
  border-color: red transparent transparent transparent;
}

.bg-green {
  background-color: #64aa18;
}
.bg-green::after {
  border-color: #63aa18 transparent transparent transparent;
}

.bg-gray {
  background-color: #1e201c;
}
.bg-gray::after {
  border-color: #1e201c transparent transparent transparent;
}

.the-products {
  color: #e23b3b;
  letter-spacing: 8px;
}

.hr {
  height: 5px;
  background-color: #e23b3b;
  width: 60px;
  margin: 10px auto 0;
}

header {
  background-image: url("../assets/bg.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: left top;
  width: 100%;
  height: 80vh;
  position: relative;
}
header .hero-background {
  background-image: linear-gradient(to right, rgba(51, 51, 51, 0) 30%, rgba(17, 17, 17, 0.869) 100%);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: left top;
  height: 100%;
}
header nav {
  width: 80%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 65px;
}
header nav .logo {
  color: white;
  font-size: 30px;
}
header nav .nav-items {
  display: flex;
  justify-content: center;
  align-items: center;
  list-style: none;
  color: white;
  font-weight: 300;
}
header nav .nav-items li {
  padding: 0 10px;
  position: relative;
}
header nav .nav-items li .badge {
  position: absolute;
  top: -15px;
  right: 5%;
  font-size: 9px;
  padding: 1px 5px;
  border-radius: 2px 2px 2px 1px;
}
header nav .nav-items li .badge::after {
  content: "";
  position: absolute;
  top: 99%;
  left: 17%;
  margin-left: -5px;
  border-width: 4px;
  border-style: solid;
  transform: rotate(-1deg);
}
header nav .nav-actions ul {
  display: flex;
  justify-content: center;
  align-items: center;
  list-style: none;
  color: white;
  font-weight: 300;
}
header nav .nav-actions ul li {
  padding: 0 10px;
  font-size: 20px;
}
header .hero-highlights {
  position: absolute;
  top: 50%;
  right: 12%;
  transform: translate(-12%, -50%);
}
header .hero-highlights h2 {
  font-size: 35px;
  color: red;
  font-weight: 300;
}
header .hero-highlights h1 {
  color: white;
  font-size: 58px;
  font-weight: 700;
  margin: 18px 0;
}
header .hero-highlights button {
  background-color: #e23b3b;
  color: white;
  padding: 15px 20px;
  border: none;
  outline: none;
  border-radius: 20px;
}

main {
  width: 100%;
  margin: 0 auto;
}
main .highlight-card {
  width: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 60px auto;
  overflow: hidden;
}
main .highlight-card .highlight-image {
  width: 45%;
  padding: 0 30px;
}
main .highlight-card .highlight-image .highlight-overlay {
  position: relative;
  height: 500px;
}
main .highlight-card .highlight-image .highlight-overlay img {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
main .highlight-card .highlight-image .highlight-overlay .overlay-effect {
  position: absolute;
  top: 0;
  left: 0;
  background-image: linear-gradient(to right, rgba(51, 51, 51, 0.59) 30%, rgba(17, 17, 17, 0.49) 100%);
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
main .highlight-card .highlight-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  width: 55%;
  gap: 20px;
}
main .highlight-card .highlight-cards .signle-highlight {
  padding: 20px 10px;
  border: 1px solid #e2e2e2;
  height: -webkit-max-content;
  height: -moz-max-content;
  height: max-content;
  text-align: center;
  border-radius: 10px;
}
main .highlight-card .highlight-cards .signle-highlight div {
  margin: 0 auto;
  border: 2px solid #818181;
  font-size: 27px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
}
main .highlight-card .highlight-cards .signle-highlight h3 {
  margin: 10px 0;
}
main .highlight-card .highlight-cards .signle-highlight p {
  color: #909090;
}
main .deals-section {
  width: 100%;
  height: 450px;
  position: relative;
  margin: 60px auto;
  overflow: hidden;
}
main .deals-section .deals-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f6f6f6;
  height: 350px;
  padding: 0 45% 0 15%;
}
main .deals-section .deals-body .deals-texts h1 {
  font-size: 40px;
