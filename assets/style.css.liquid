}
main .about-section .about-container .about-text .about-button {
  background-color: #e23b3b;
  color: #e2e2e2;
  border: none;
  outline: none;
  border-radius: 30px;
  cursor: pointer;
  padding: 15px 30px;
}
main .about-section .about-container .about-text .about-button:hover {
  background-color: red;
}
main .newsletter-section {
  background-color: #e23b3b;
  padding: 25px 0;
}
