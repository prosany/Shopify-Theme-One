  margin: 10px 0;
}
main .service-section .services .service-highlight p {
  font-weight: 300;
  color: #818181;
}
main .latest-product-section {
  text-align: center;
  margin: 60px auto;
  width: 80%;
}
main .latest-product-section h1 {
  font-size: 40px;
  font-weight: bold;
}
main .latest-product-section .latest-products {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}
main .latest-product-section .latest-products .single-product {
  position: relative;
  background-color: #f7f7f7;
  border-radius: 2px;
  padding: 20px 0;
  margin: 20px 0;
}
main .latest-product-section .latest-products .single-product .sale {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  background-color: #59b632;
