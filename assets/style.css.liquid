}
main .about-section .about-container .about-text {
  width: 45%;
  padding: 0 10px;
}
main .about-section .about-container .about-text h1 {
  font-size: 40px;
}
main .about-section .about-container .about-text .hr {
  height: 5px;
  background-color: #e23b3b;
