}
main .latest-product-section .latest-products .single-product .rating {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5px 0 10px;
  color: #f4b902;
  font-size: 18px;
}
main .latest-product-section .latest-products .single-product .rating i {
  padding: 0 2px;
}
main .latest-product-section .latest-products .single-product h4 {
  color: #6b6a6a;
  font-weight: 400;
  margin: 10px 0;
}
main .latest-product-section .latest-products .single-product .price {
  font-weight: bold;
}
main .latest-product-section .latest-products .single-product button {
  background-color: #e23b3b;
  color: #e2e2e2;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  outline: none;
  border-radius: 50%;
  position: absolute;
  right: 25px;
  bottom: 20%;
  font-weight: 900;
  font-size: 18px;
  cursor: pointer;
}
main .latest-product-section .latest-products .single-product button:hover {
  background-color: red;
}
main .latest-product-section .view-all-product {
  background-color: #e23b3b;
  color: #e2e2e2;
  border: none;
  outline: none;
  border-radius: 30px;
  cursor: pointer;
  padding: 15px 30px;
}
main .latest-product-section .view-all-product:hover {
  background-color: red;
}
main .sponsor-section {
  text-align: center;
  margin: 60px auto;
  width: 80%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
main .sponsor-section img {
  width: 120px;
  filter: grayscale(100%);
}
main .about-section {
  background-color: #f7f7f7;
  padding: 30px 0;
}
