<div class="copyright">
  <div class="copyright-container">
    <p>{{ section.settings.copyright_text }}</p>
    <div>
      {% for gateway in section.blocks %}
        {% include 'copyright' %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Copyright",
    "settings": [
      {
        "type": "text",
        "id": "copyright_text",
        "label": "Copyright Text",
        "default": "Â© 2023, Fabulous All Rights Reserved."
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Single Payment Icon",
        "limit": 10,
        "settings": [
          {
            "type": "html",
            "id": "copyright_icon",
            "label": "Gateway Icon (FontAwesome Icon)"
          }
        ]
      }
    ]
  }
{% endschema %}