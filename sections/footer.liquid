{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "footer_logo",
        "label": "Footer Logo",
        "default": "Fabulous",
        "info": "Note: Add Only Text Here"
      }, {
        "type": "textarea",
        "id": "footer_description",
        "label": "Footer Description",
        "default": "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ipsum pariatur molestiae perferendis quis modi exercitationem!",
        "info": "Write your description"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Single Card",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "service_icon",
            "label": "Service Icon (FontAwesome Icon)"
          }, {
            "type": "text",
            "id": "service_card",
            "label": "Service Name"
          }, {
            "type": "textarea",
            "id": "service_description",
            "label": "Service Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "2 Column Image Tiles",
        "category": "2 Column Image Tiles",
        "blocks": [
          {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}